{
  "Title": "Teams",
  "Description": "An organisation may have many teams. Teams may have many channels available. Access to channels may be shared between teams.",
  "Package": "crust",
  "Interface": "Team",
  "Path": "/team",
  "APIs": {
    "archive": {
      "Method": "POST",
      "Title": "Archive team",
      "Path": "/archive",
      "Parameters": {
        "post": [
          {
            "name": "id",
            "required": true,
            "title": "ID of Organisation",
            "type": "uint64"
          }
        ]
      }
    },
    "edit": {
      "Method": "POST",
      "Title": "Update team details",
      "Path": "/edit",
      "Parameters": {
        "post": [
          {
            "name": "id",
            "required": false,
            "title": "ID of Team",
            "type": "uint64"
          },
          {
            "name": "name",
            "required": true,
            "title": "Name of Team",
            "type": "string"
          },
          {
            "name": "members",
            "required": false,
            "title": "Team member IDs",
            "type": "[]uint64"
          }
        ]
      }
    },
    "move": {
      "Method": "POST",
      "Title": "Move team to different organisation",
      "Path": "/move",
      "Parameters": {
        "POST": [
          {
            "name": "id",
            "required": true,
            "title": "ID of Organisation",
            "type": "uint64"
          },
          {
            "name": "organisation_id",
            "required": true,
            "title": "ID of Organisation",
            "type": "uint64"
          }
        ]
      }
    },
    "read": {
      "Method": "GET",
      "Title": "Read team details and memberships",
      "Path": "/read",
      "Parameters": {
        "get": [
          {
            "name": "id",
            "required": true,
            "title": "ID of Organisation",
            "type": "uint64"
          }
        ]
      }
    },
    "remove": {
      "Method": "DELETE",
      "Title": "Remove team",
      "Path": "/remove",
      "Parameters": {
        "get": [
          {
            "name": "id",
            "required": true,
            "title": "ID of Organisation",
            "type": "uint64"
          }
        ]
      }
    },
    "search": {
      "Method": "GET",
      "Title": "Search teams",
      "Path": "/search",
      "Parameters": {
        "get": [
          {
            "name": "query",
            "required": false,
            "title": "Search query",
            "type": "string"
          }
        ]
      }
    }
  }
}